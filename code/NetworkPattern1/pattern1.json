{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.28.1.47646",
      "templateHash": "15555848341583700764"
    }
  },
  "parameters": {
    "appname": {
      "type": "string",
      "defaultValue": "app",
      "metadata": {
        "description": "Name of the workload"
      }
    },
    "environment": {
      "type": "string",
      "defaultValue": "prod",
      "metadata": {
        "description": "Environment (Prod/Dev/Test)"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for the workload"
      }
    }
  },
  "variables": {
    "suffix": "[uniqueString(subscription().subscriptionId, resourceGroup().id)]",
    "baseName": "[format('{0}-{1}-{2}-{3}', parameters('location'), parameters('appname'), parameters('environment'), variables('suffix'))]",
    "vnetName": "[format('vnet-{0}', variables('baseName'))]",
    "subnetFEName": "[format('snet-{0}-FrontEnd', variables('baseName'))]",
    "subnetBLName": "[format('snet-{0}-BusinessLogic', variables('baseName'))]",
    "subnetBEName": "[format('snet-{0}-BackEnd', variables('baseName'))]",
    "vnetAddressPrefix": "10.2.0.0/16",
    "frontendsSubnetPrefix": "10.2.1.0/24",
    "logicSubnetPrefix": "10.2.2.0/24",
    "backendSubnetPrefix": "10.2.3.0/24"
  },
  "resources": [
    {
      "type": "Microsoft.Network/virtualNetworks",
      "apiVersion": "2022-11-01",
      "name": "[variables('vnetName')]",
      "location": "[parameters('location')]",
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[variables('vnetAddressPrefix')]"
          ]
        },
        "subnets": [
          {
            "name": "[variables('subnetFEName')]",
            "properties": {
              "addressPrefix": "[variables('frontendsSubnetPrefix')]"
            }
          },
          {
            "name": "[variables('subnetBLName')]",
            "properties": {
              "addressPrefix": "[variables('logicSubnetPrefix')]"
            }
          },
          {
            "name": "[variables('subnetBEName')]",
            "properties": {
              "addressPrefix": "[variables('backendSubnetPrefix')]"
            }
          }
        ]
      }
    }
  ]
}